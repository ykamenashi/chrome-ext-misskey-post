{
    "manifest_version": 3,
    "author": "yuutarou KAMENASHI",
    "homepage_url": "https://github.com/ykamenashi/chrome-ext-misskey-post",
    "name": "Misskey Share Button",
    "description": "one-click Misskey Share Button without API key.",
    "version": "1.0",
    "icons": {
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon_32.png",
        "default_title": "Post to Misskey"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [ ],
    "options_page": "config_panel.html",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "script.js"
            ]
        }
    ]
}