{
    "manifest_version": 3,
    "author": "",
    "homepage_url": "https://example.com",
    "name": "Misskey Share Button",
    "description": "Misskey Share Button.",
    "version": "1.0",
    "icons": {
        "32": "icon_32.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon_32.png",
        "default_title": "Post to Misskey"
    },
    "permissions": [
        "tabs",
        "scripting",
        "background"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}